# EditorConfig is awesome: http://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true
charset = utf-8

[{Dockerfile,*.json,*.sh}]
indent_style = space
indent_size = 2

[*.md]
indent_style = space
indent_size = 4

[{composer.json,composer.lock}]
indent_size = 4

[Makefile]
indent_style = tab
indent_size = 2
